---
import EmergencyIcon from "../../../assets/icons/emergency.svg";
import EmailIcon from "../../../assets/icons/email.svg";
import PhoneIcon from "../../../assets/icons/phone.svg";

---
<div class="top-bar">
  <div class="container">
    <span class="service-text">
      Domestic &amp; Commercial Services - Hourly rate £37.00 per electrician - Call out charge (1st Hour) £80.00
    </span>

    <div class="contact-info">
      <span class="contact-item phone">
        <PhoneIcon class="icon" aria-hidden="true" />
        <span class="number">01723 449667</span>
      </span>

      <span class="contact-item email">
        <EmailIcon class="icon" aria-hidden="true" />
        info@tei-ltd.co.uk
      </span>

      <a href="/emergency" class="emergency-btn">
        <EmergencyIcon class="icon" aria-hidden="true" />
        <span>24/7 Emergency</span>
      </a>
    </div>
  </div>
</div>

<style>
/* ===== Top Bar ===== */
.top-bar {
  background: linear-gradient(135deg, #2a9134 0%, #1f7328 100%);
  color: #fff;
  padding: 0.65rem 1rem;
  font-weight: 500;
  border-bottom: 2px solid rgba(0,0,0,0.15);
  box-shadow: 0 3px 12px rgba(0,0,0,0.15);
  position: relative;
  z-index: 12;
}

/* ===== Container ===== */
.container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 2rem;
}

/* ===== Service Text ===== */
.service-text {
  display: none;
  font-weight: 700;
  font-size: 0.95rem;
  line-height: 1.4;
  max-width: 100%;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 0.2px;
}

/* ===== Contact Info ===== */
.contact-info {
  display: flex;
  width: 100%;
  justify-content: space-between;
  gap: 1rem;
  flex-shrink: 0;
}

/* ===== Contact Items ===== */
.contact-item {
  flex: 1 1 0%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 0.95rem;
  white-space: nowrap;
  padding: 0.3rem 0.5rem;
  border-radius: 6px;
  transition: background 0.2s ease;
}

.contact-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* Hide email on mobile */
.contact-item.email {
  display: none;
}

/* ===== Icons ===== */
.icon {
  width: 1.4rem;
  height: 1.4rem;
  margin-right: 0.5rem;
  flex-shrink: 0;
  fill: currentColor;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
}

/* ===== Emergency Button ===== */
.emergency-btn {
  flex: 1 1 0%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-accent);
  color: var(--brand-black);
  padding: 0.45rem 1.25rem;
  border-radius: 50px;
  font-weight: 800;
  font-size: 0.95rem;
  text-decoration: none;
  height: 2.25rem;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 2px solid transparent;
  box-shadow: 0 2px 8px rgba(253, 238, 33, 0.3);
  position: relative;
  overflow: hidden;
}

.emergency-btn::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.2);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.emergency-btn:hover::before {
  transform: translateX(0);
}

.emergency-btn:hover {
  background: var(--brand-black);
  color: var(--color-accent);
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(253, 238, 33, 0.4);
  border-color: var(--color-accent);
}

.emergency-btn:focus-visible {
  outline: 3px solid var(--color-accent);
  outline-offset: 2px;
}

/* ===== Tablet & Up (md) ===== */
@media (min-width: 768px) {
  .service-text {
    display: block;
    white-space: normal;
    text-align: center;
  }

  .contact-info {
    width: auto;
    justify-content: flex-end;
    gap: 1.25rem;
  }

  .contact-item {
    flex: 0 0 auto;
    justify-content: flex-start;
  }

  .contact-item.email {
    display: flex;
  }

  .emergency-btn {
    flex: 0 0 auto;
  }
}

/* ===== Large Desktop (xl) ===== */
@media (min-width: 1200px) {
  .service-text {
    white-space: nowrap;
    max-width: none;
  }
}

/* ===== Small Phones ===== */
@media (max-width: 380px) {
  .contact-item {
    font-size: 0.85rem;
  }

  .emergency-btn {
    font-size: 0.85rem;
    padding: 0.25rem 0.75rem;
  }

  .icon {
    width: 1rem;
    height: 1rem;
    margin-right: 0.25rem;
  }
}
@media (max-width: 1000px) {
  .container {
    flex-direction: column;
    align-items: stretch;
    gap: 0;
  }

  .contact-info {
    order: 1;
    width: 100%;
  }

  .service-text {
    order: 2;
    display: block;
    margin-top: 0.5rem;
    text-align: center;
  }
}
</style>
