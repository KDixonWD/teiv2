---
interface Props {
  title: string;
  theme?: 'light' | 'dark';
}

const { title, theme = 'dark' } = Astro.props as Props;
---

<div class={`section-header ${theme}`}>
  <h2>{title}</h2>
</div>


<style>
  .section-header {
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    position: relative;
    display: inline-block;
    font-weight: 700;
    margin: 0;
    padding-bottom: .25rem;
    text-underline-offset: .35rem;
    text-decoration-thickness: .4rem;
  }

  .section-header.dark h2 {
    color: var(--color-bg);
    text-decoration: underline;
    text-decoration-color: var(--brand-yellow);
  }

  .section-header.light h2 {
    color: var(--brand-dark);
    text-decoration: underline;
    text-decoration-color: var(--brand-green);
  }
</style>
