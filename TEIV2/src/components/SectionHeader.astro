---
interface Props {
  title: string;
  theme?: 'light' | 'dark';
}

const { title, theme = 'dark' } = Astro.props as Props;
---

<div class={`section-header ${theme}`}>
  <h2>{title}</h2>
</div>


<style>
  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    position: relative;
    display: inline-block;
    font-weight: 900;
    margin: 0;
    padding-bottom: 0.75rem;
  }

  .section-header h2::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120%;
    height: 6px;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      var(--color-primary) 50%,
      transparent 100%
    );
  }

  .section-header.dark h2 {
    color: #ffffff;
    letter-spacing: 0.3px;
  }

  .section-header.light h2 {
    color: var(--brand-dark);
    letter-spacing: 0.2px;
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 1.7rem;
    }
  }
</style>
