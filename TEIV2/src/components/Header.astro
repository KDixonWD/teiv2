---
import TopBar from './Common/Header/TopBar.astro';
import MobileNav from './Common/Header/MobileNav.astro';
import logoUrl from '../assets/global/TEI_logo.png';
import Menu from '../assets/icons/menu.svg';
---

<TopBar />

<header class="header">
  <div class="header-inner">
    <div class="logo">
      <a href="/teiv2/home">
        <img src={logoUrl.src} alt="TEI Electrical Logo" />
      </a>
    </div>

    <nav class="main-nav" aria-label="Main navigation">
      <ul class="nav-list">
        <li class="nav-item">
          <a href="/teiv2/home" class="nav-link">Home</a>
        </li>

        <li class="nav-item nav-item--dropdown">
          <details class="nav-dropdown">
            <summary class="nav-link nav-link--summary">Services</summary>
            <div class="dropdown-panel">
              <a class="dropdown-link" href="/teiv2/services">All Services</a>
              <a class="dropdown-link" href="/teiv2/services/commercial">Commercial</a>
              <a class="dropdown-link" href="/teiv2/services/renewable">Renewable</a>
              <a class="dropdown-link" href="/teiv2/services/domestic">Domestic</a>
            </div>
          </details>
        </li>

        <li class="nav-item">
          <a href="/teiv2/portfolio" class="nav-link">Portfolio</a>
        </li>

        <li class="nav-item nav-item--dropdown">
          <details class="nav-dropdown">
            <summary class="nav-link nav-link--summary">About</summary>
            <div class="dropdown-panel">
              <a class="dropdown-link" href="/teiv2/about-us">About Us</a>
              <a class="dropdown-link" href="/teiv2/about-us/accreditations">
                Accreditations &amp; Certifications
              </a>
            </div>
          </details>
        </li>

        <li class="nav-item">
          <a href="/teiv2/contact" class="nav-link">Contact</a>
        </li>
      </ul>
    </nav>

    <button
      class="mobile-menu-btn"
      id="openMenu"
      aria-label="Open menu"
      aria-controls="mobileNav"
      aria-expanded="false"
    >
      <Menu class="icon" />
    </button>
  </div>
</header>

<MobileNav />

<style>
/* ===== Header ===== */
.header {
  position: relative;
  background: rgba(96, 96, 97, 0.85);
  padding: 1rem 0;
  z-index: 20;
}

/* ===== Inner Container ===== */
.header-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 72px;
}

/* ===== Logo ===== */
.logo img {
  height: 96px;
  display: block;
}

/* ===== Navigation ===== */
.nav-list {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 1.75rem;
  margin: 0;
  padding: 0;
}

.nav-item {
  position: relative;
}

/* Subtle separators */
.nav-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: -0.9rem;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 1.2rem;
  background: rgba(253, 238, 33, 0.4);
}

.nav-link {
  color: var(--color-accent);
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: 700;
  letter-spacing: 0.3px;
  padding: 0.25rem 0;
  position: relative;
  cursor: pointer;
}

/* Underline hover */
.nav-link::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -0.25rem;
  width: 0;
  height: 3px;
  background: currentColor;
  transition: width 0.5s ease;
}

.nav-link:hover::after {
  width: 100%;
}

.nav-link:hover {
  color: #ffffff;
}

/* ===== Dropdown ===== */
.nav-dropdown {
  position: relative;
}

.nav-link--summary {
  list-style: none;
}

.nav-link--summary::-webkit-details-marker {
  display: none;
}

/* Caret */
.nav-link--summary::before {
  content: "â–¾";
  font-size: 0.9em;
  margin-right: 0.4rem;
}

/* Dropdown panel */
.dropdown-panel {
  position: absolute;
  top: calc(100% + 0.75rem);
  left: 0;
  min-width: 220px;
  background: rgba(62, 62, 62, 0.96);
  border: 2px solid var(--color-accent);
  border-radius: 10px;
  padding: 0.5rem;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
  display: none;
  z-index: 50;
}

.nav-dropdown[open] .dropdown-panel {
  display: block;
}

.dropdown-link {
  display: block;
  padding: 0.55rem 0.75rem;
  text-decoration: none;
  color: #ffffff;
  font-weight: 600;
  font-size: 1rem;
  position: relative;
  transition: color 0.2s ease;
}

/* Underline hover effect (matches main nav style) */
.dropdown-link::after {
  content: "";
  position: absolute;
  left: 0.75rem;
  bottom: 0.35rem;
  width: 0;
  height: 3px;
  background: var(--color-accent);
  transition: width 0.75s ease;
}

.dropdown-link:hover {
  color: var(--color-accent);
}

.dropdown-link:hover::after {
  width: calc(100% - 1.5rem);
}

/* ===== Mobile Menu Button ===== */
.mobile-menu-btn {
  display: none;
  background: none;
  border: 0;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--color-accent);
}

.mobile-menu-btn .icon {
  width: 38px;
  height: 38px;
  stroke: currentColor;
}

/* ===== Breakpoints ===== */
@media (max-width: 900px) {
  .main-nav {
    display: none;
  }

  .mobile-menu-btn {
    display: block;
  }

  .logo img {
    height: 72px;
  }
}

@media (max-width: 480px) {
  .logo img {
    height: 56px;
  }

  .mobile-menu-btn .icon {
    width: 42px;
    height: 42px;
  }
}
</style>

<script>
  /* Allow only one dropdown open at a time */
  const dropdowns = document.querySelectorAll<HTMLDetailsElement>('.nav-dropdown');

  dropdowns.forEach((dropdown) => {
    dropdown.addEventListener('toggle', () => {
      if (dropdown.open) {
        dropdowns.forEach((other) => {
          if (other !== dropdown) {
            other.removeAttribute('open');
          }
        });
      }
    });
  });

  const mobileNav = document.getElementById('mobileNav');
  const openMenuBtn = document.getElementById('openMenu');

  openMenuBtn?.addEventListener('click', () => {
    mobileNav?.classList.add('active');
    document.body.style.overflow = 'hidden';
    mobileNav?.setAttribute('aria-hidden', 'false');
    openMenuBtn.setAttribute('aria-expanded', 'true');
  });
</script>
