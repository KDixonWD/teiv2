---
import TopBar from './Common/Header/TopBar.astro';
import MobileNav from './Common/Header/MobileNav.astro';
import logoUrl from '../assets/global/TEI_logo.png';
import Menu from '../assets/icons/menu.svg';
---

<TopBar />

<header class="header">
  <div class="header-inner">
    <div class="logo">
      <a href="/teiv2/home">
        <img src={logoUrl.src} alt="TEI Electrical Logo" />
      </a>
    </div>

    <nav class="main-nav" aria-label="Main navigation">
      <ul class="nav-list">
        <li class="nav-item">
          <a href="/teiv2/home" class="nav-link">Home</a>
        </li>

        <li class="nav-item nav-item--dropdown">
          <details class="nav-dropdown">
            <summary class="nav-link nav-link--summary">Services</summary>
            <div class="dropdown-panel">
              <a class="dropdown-link" href="/teiv2/services">All Services</a>
              <a class="dropdown-link" href="/teiv2/services/commercial">Commercial</a>
              <a class="dropdown-link" href="/teiv2/services/renewable">Renewable</a>
              <a class="dropdown-link" href="/teiv2/services/domestic">Domestic</a>
            </div>
          </details>
        </li>

        <li class="nav-item">
          <a href="/teiv2/portfolio" class="nav-link">Portfolio</a>
        </li>

        <li class="nav-item nav-item--dropdown">
          <details class="nav-dropdown">
            <summary class="nav-link nav-link--summary">About</summary>
            <div class="dropdown-panel">
              <a class="dropdown-link" href="/teiv2/about-us">About Us</a>
              <a class="dropdown-link" href="/teiv2/about-us/accreditations">
                Accreditations &amp; Certifications
              </a>
            </div>
          </details>
        </li>

        <li class="nav-item">
          <a href="/teiv2/contact" class="nav-link">Contact</a>
        </li>
      </ul>
    </nav>

    <button
      class="mobile-menu-btn"
      id="openMenu"
      aria-label="Open menu"
      aria-controls="mobileNav"
      aria-expanded="false"
    >
      <Menu class="icon" />
    </button>
  </div>
</header>

<MobileNav />

<style>
/* ===== Header ===== */
.header {
  position: absolute;
  width: 100%;
  background: rgba(30, 30, 30, 0.92);
  padding: 1rem 0;
  z-index: 20;
  backdrop-filter: blur(8px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
}

/* ===== Inner Container ===== */
.header-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 72px;
}

/* ===== Logo ===== */
.logo img {
  height: 96px;
  display: block;
}

/* ===== Navigation ===== */
.nav-list {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 1.75rem;
  margin: 0;
  padding: 0;
}

.nav-item {
  position: relative;
}

/* Subtle separators */
.nav-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: -0.9rem;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 1.2rem;
  background: rgba(253, 238, 33, 0.4);
}

.nav-link {
  color: var(--color-accent);
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: 700;
  letter-spacing: 0.3px;
  padding: 0.5rem 0;
  position: relative;
  cursor: pointer;
  transition: color 0.3s ease;
}

/* Underline hover */
.nav-link::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 3px;
  background: currentColor;
  border-radius: 3px;
  transition: width 0.4s ease;
}

.nav-link:hover::after {
  width: 100%;
}

.nav-link:hover {
  color: #ffffff;
}

.nav-link:focus-visible {
  outline: 2px solid var(--color-accent);
  outline-offset: 4px;
  border-radius: 4px;
}

/* ===== Dropdown ===== */
.nav-dropdown {
  position: relative;
}

.nav-link--summary {
  list-style: none;
}

.nav-link--summary::-webkit-details-marker {
  display: none;
}

/* Caret */
.nav-link--summary::before {
  content: "â–¾";
  font-size: 0.9em;
  margin-right: 0.4rem;
}

/* Dropdown panel */
.dropdown-panel {
  position: absolute;
  top: calc(100% + 0.75rem);
  left: 0;
  min-width: 240px;
  background: rgba(30, 30, 30, 0.97);
  border: 2px solid var(--color-accent);
  border-radius: 16px;
  padding: 0.75rem;
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(253, 238, 33, 0.1);
  display: none;
  z-index: 50;
  backdrop-filter: blur(8px);
  animation: dropdownFade 0.2s ease;
}

@keyframes dropdownFade {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.nav-dropdown[open] .dropdown-panel {
  display: block;
}

.dropdown-link {
  display: block;
  padding: 0.65rem 0.9rem;
  text-decoration: none;
  color: #ffffff;
  font-weight: 700;
  font-size: 0.95rem;
  position: relative;
  transition: all 0.3s ease;
  border-radius: 10px;
  letter-spacing: 0.2px;
}

/* Underline hover effect */
.dropdown-link::after {
  content: "";
  position: absolute;
  left: 0.9rem;
  bottom: 0.5rem;
  width: 0;
  height: 2px;
  background: var(--color-accent);
  border-radius: 2px;
  transition: width 0.4s ease;
}

.dropdown-link:hover {
  color: var(--color-accent);
  background: rgba(253, 238, 33, 0.08);
  transform: translateX(4px);
}

.dropdown-link:hover::after {
  width: calc(100% - 1.8rem);
}

.dropdown-link:focus-visible {
  outline: 2px solid var(--color-accent);
  outline-offset: 2px;
}

/* ===== Mobile Menu Button ===== */
.mobile-menu-btn {
  display: none;
  background: rgba(253, 238, 33, 0.1);
  border: 2px solid rgba(253, 238, 33, 0.3);
  border-radius: 50%;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--color-accent);
  transition: all 0.3s ease;
}

.mobile-menu-btn:hover {
  background: rgba(253, 238, 33, 0.2);
  border-color: var(--color-accent);
  transform: scale(1.05);
}

.mobile-menu-btn:focus-visible {
  outline: 3px solid var(--color-accent);
  outline-offset: 2px;
}

.mobile-menu-btn .icon {
  width: 38px;
  height: 38px;
  stroke: currentColor;
  display: block;
}

/* ===== Breakpoints ===== */
@media (max-width: 900px) {
  .main-nav {
    display: none;
  }

  .mobile-menu-btn {
    display: block;
  }

  .logo img {
    height: 72px;
  }
}

@media (max-width: 480px) {
  .logo img {
    height: 56px;
  }

  .mobile-menu-btn .icon {
    width: 42px;
    height: 42px;
  }
}
</style>

<script>
  /* Allow only one dropdown open at a time */
  const dropdowns = document.querySelectorAll<HTMLDetailsElement>('.nav-dropdown');

  dropdowns.forEach((dropdown) => {
    dropdown.addEventListener('toggle', () => {
      if (dropdown.open) {
        dropdowns.forEach((other) => {
          if (other !== dropdown) {
            other.removeAttribute('open');
          }
        });
      }
    });
  });

  const mobileNav = document.getElementById('mobileNav');
  const openMenuBtn = document.getElementById('openMenu');

  openMenuBtn?.addEventListener('click', () => {
    mobileNav?.classList.add('active');
    document.body.style.overflow = 'hidden';
    mobileNav?.setAttribute('aria-hidden', 'false');
    openMenuBtn.setAttribute('aria-expanded', 'true');
  });
</script>
