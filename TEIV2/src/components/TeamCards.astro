---
import SectionHeader from './SectionHeader.astro';

interface Member {
  name: string;
  role: string;
  imageUrl: string;
  imageAlt?: string;
}

interface Props {
  members?: Member[];
}

const {
  members = [
    { name: 'Harry Phillips', role: 'Director / Approved Electrician', imageUrl: '/teiv2/images/about-us/Harry.webp', imageAlt: 'Harry Phillips' },
    { name: 'Emma Phillips', role: 'Office Manager', imageUrl: '/teiv2/images/about-us/Emma.webp', imageAlt: 'Emma Phillips' }
  ]
} = Astro.props as Props;
---

<div class="team-cards">
  <SectionHeader title="Meet the team" theme="dark" />

  <div class="cards">
    {members.map(member => (
      <article class="card" role="group" aria-label={member.name}>
        <div class="card-inner">
          
          <div class="card-content">
            
            <div class="card-role-section">
              <p class="card-role">{member.role}</p>
            </div>
            <div class="card-name-section">
              <h3 class="card-name">{member.name}</h3>
            </div>
            <div class="card-media">
            <img src={member.imageUrl} alt={member.imageAlt ?? member.name} />
          </div>
          </div>
        </div>
      </article>
    ))}
  </div>
</div>

<style>
  .team-cards { padding: 0.5rem 0 3rem; }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.25rem;
    margin-top: 1.25rem;
  }

  .card {
    border-radius: 12px;
    overflow: visible;
    box-shadow: 0 10px 30px rgba(8,8,8,0.06);
    background: transparent;
    position: relative;
  }

  .card-inner {
    display: block;
  }

  /* Avatar sits on top of the card content, overlapping both halves */
  .card-media {
    position: absolute;
    left: 18px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;
    pointer-events: none;
  }

  .card-media img {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    border: 8px solid var(--brand-yellow);
    box-shadow: 0 14px 36px rgba(42,145,52,0.10);
    background: white;
    display: block;
  }

  .card-content {
    display: grid;
    grid-template-rows: auto auto;
    min-height: 160px;
  }

  .card-name-section {
    background: var(--brand-yellow);
    display: flex;
    align-items: center;
    padding: 1.25rem 1.25rem;
    z-index: 1;
        padding-left: calc(160px + 40px); /* leave space for avatar */

  }

  .card-role-section {
    background: #3e3e3e;
    display: flex;
    align-items: center;
    padding: 1.25rem 1.25rem;
    color: var(--color-bg);
       padding-left: calc(160px + 40px); /* leave space for avatar */

  }

  .card-name { margin: 0; font-weight: 900; color: var(--brand-dark); font-size: 1.4rem; }
  .card-role { margin: 0; color: var(--color-bg); font-size: 1.2rem; }

  .card:hover { transform: translateY(-4px); }

  @media (max-width:720px) {
    .card-media { position: static; transform: none; display: flex; justify-content: center; margin-top: 0.5rem; }
    .card-media img { width: 120px; height: 120px; border-width: 6px; }
    .card-content { padding-left: 1rem; }
    .card-name-section, .card-role-section { padding-left: 1rem; padding-right: 1rem; }
  }
</style>
